<persistence xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="org.hibernate.tutorial.jpa">
	<description>
            Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
        </description>
        <class>org.hibernate.tutorial.em.Event</class>
        <properties>
        	<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        	<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/dbprueba1"/>
        	<property name="javax.persistence.jdbc.user" value="root"/>
        	<property name="javax.persistence.jdbc.password" value="sistemas"/>
        </properties>
     </persistence-unit>
</persistence>